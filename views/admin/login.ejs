<% layout("/layouts/boilerplate") %>

<div style="position: relative;top: 130px;" class="row mt-3">
    <div style="margin-left: 212px; margin-bottom: 12px;">
        <h1 class="col-6 offset">LogIn Admin</h1>
    </div>
    <div class="col-6 offset-2">
        <form action="/loginAdmin" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label" >Username</label>
            <input name="username" id="username" type="text" class="form-control" required />
            <div class="valid-feedback">Looks good!</div>
        </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
            <input name="password" id="password" type="password" class="form-control" required />
            <a style="text-decoration: none;" href="/signupAdmin">create a account</a>
        </div>
        <button class="btn btn-success">Login</button>
        </form>
    </div>
</div>